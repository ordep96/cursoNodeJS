extends layout.pug

block content
  section.container
    h1.header= title
    article.item
      form.form(method="post" action=`/editar/${data.id}`)
        input(type="hidden" name="id" value=data.id)
        fieldset
          div
            input(type="text" name="nombre" placeholder="Nombre" value=data.nombre, required)
          div
            input(type="text" name="apellido" placeholder="Apellido" value=data.apellido, required)
          div
            input(type="text" name="edad" placeholder="Edad" value=data.edad, required)
          div
            input(type="text" name="pais", placeholder="Pa√≠s" value=data.pais, required)
          div
            input.button.add(type="submit", value="Editar")
    a.button.show(href="/") Inicio